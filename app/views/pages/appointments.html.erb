<h1 class="center">Your Appointments</h1>
<% @appointments.each do |appointment| %>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Sitter: <%= appointment.sitter.name %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3 col-lg-3 " align="center"> <img alt="Appointment Pic" src="http://onestopgrowth.com/wp-content/uploads/2013/12/Quality-Appointment-Setting.png" class="img-circle img-responsive"> </div>

      <div class=" col-md-9 col-lg-9 ">
        <table class="table table-user-information">
          <tbody>
            <tr>
              <td>Date:</td>
              <td><%= appointment.date.strftime("%d/%m/%Y") %></td>
            </tr>
            <tr>
              <td>Address</td>
              <td><%= appointment.owner.location %></td>
            </tr>
            <% if sitter? %>
            <tr>
              <td>Dog's name</td>
              <td><%= appointment.owner.dog %></td>
            </tr>
            <% end %>
          </tr>
        </tbody>
      </table>

      <%= form_for(:appointment, url: appointments_path, method: 'delete', html: {class: "form-signin"}) do |f| %>
        <%= hidden_field_tag :id, appointment.id %>
        <%= f.submit "Cancel Job", class: "btn btn-primary" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
<% if !sitter? %>
<h1 class="center">Unassigned Appointments</h1>
<% @unassigned.each do |appointment| %>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Sitter: Pending</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3 col-lg-3 " align="center"> <img alt="Red Ex" src="http://vignette2.wikia.nocookie.net/louser/images/4/43/X_icon.png/revision/latest?cb=20130220221716" class="img-circle img-responsive"> </div>

      <div class=" col-md-9 col-lg-9 ">
        <table class="table table-user-information">
          <tbody>
            <tr>
              <td>Date:</td>
              <td><%= appointment.date.strftime("%d/%m/%Y") %></td>
            </tr>
            <tr>
              <td>Address</td>
              <td><%= appointment.owner.location %></td>
            </tr>
          </tr>
        </tbody>
      </table>

      <%= form_for(:appointment, url: appointments_path, method: 'delete', html: {class: "form-signin"}) do |f| %>
        <%= hidden_field_tag :id, appointment.id %>
        <%= f.submit "Cancel Job", class: "btn btn-primary" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>


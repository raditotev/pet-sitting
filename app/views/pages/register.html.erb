<div class="row">
  <div class="col-md-6">
    <%= form_for @owner, html: {class: "form-signin"} do |f| %>

    <h2 class="form-signin-heading">Owner registration</h2>

    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Your name" %>

    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :dog, class: "form-control", placeholder: "Your pet's name" %>

    <%= f.label :location, class: "sr-only" %>
    <%= f.text_field :location, class: "form-control", placeholder: "Address" %>
    <br>
    <%= f.submit "Register", class: "btn btn-lg btn-primary btn-block" %>

    <% end %>
  </div>
  <div class="col-md-6">
    <%= form_for @sitter, html: {class: "form-signin"} do |f| %>

    <h2 class="form-signin-heading">Pet-sitter registration</h2>

    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    <br>
    <%= f.submit "Register", class: "btn btn-lg btn-primary btn-block" %>

    <% end %>
  </div>
</div>
